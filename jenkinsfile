pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t node-app1 .'
            }
        }

        stage('Test') {
            steps {
                sh 'docker run --rm node-app1 npm test'
            }
        }

        stage('Push') {
            steps {
                sh 'docker tag node-app1 my-username/node-app1:latest'
                sh 'docker push my-username/node-app1:latest'
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker-compose down || true'
                sh 'docker-compose up -d'
            }
        }
    }
}

