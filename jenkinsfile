pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat 'docker build -t node-app1 .'
            }
        }

        stage('Test') {
            steps {
                bat 'docker run --rm node-app1 npm test'
            }
        }

        stage('Push') {
            steps {
                bat 'docker tag node-app1 siddha200340/node-app1:latest'
                bat 'docker push siddha200340/node-app1:latest'
            }
        }

        stage('Deploy') {
            steps {
                bat 'docker-compose down || exit 0'
                bat 'docker-compose up -d'
            }
        }
    }
}

